<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

<!--    Creates the Logo-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/monda"
            android:text="@string/logo_word_1"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.321"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/monda"
            android:text="@string/logo_word_2"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#000000">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:orientation="vertical"
                android:layout_column="1"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="#ffffff">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ignition"
                    android:id="@+id/ignitionBtn"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ignition"
                    android:textColor="#000000"
                    android:fontFamily="@font/monda"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_column="1"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="#ffffff">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ac"
                    android:id="@+id/acBtn"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ac"
                    android:textColor="#000000"
                    android:fontFamily="@font/monda"
                    android:textSize="18dp"/>
            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:orientation="vertical"
                android:layout_column="1"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="#ffffff">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/brake"
                    android:id="@+id/brakeBtn"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/brake"
                    android:textColor="#000000"
                    android:fontFamily="@font/monda"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_column="1"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="#ffffff">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/engine"
                    android:id="@+id/engineBtn"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/engine"
                    android:textColor="#000000"
                    android:fontFamily="@font/monda"
                    android:textSize="18dp"/>
            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:orientation="vertical"
                android:layout_column="1"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="#ffffff">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/battery"
                    android:id="@+id/batteryBtn"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/battery"
                    android:textColor="#000000"
                    android:fontFamily="@font/monda"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_column="1"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="#ffffff">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tyre"
                    android:id="@+id/tyreBtn"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tyre"
                    android:textColor="#000000"
                    android:fontFamily="@font/monda"
                    android:textSize="18dp"/>
            </LinearLayout>

        </TableRow>
        <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <LinearLayout
            android:orientation="vertical"
            android:layout_column="1"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="#ffffff">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:adjustViewBounds="true"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/oil"
                android:id="@+id/oilBtn"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/oil"
                android:textColor="#000000"
                android:fontFamily="@font/monda"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_column="1"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="#ffffff">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:adjustViewBounds="true"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/overheating"
                android:id="@+id/overheatingBtn"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overheating"
                android:textColor="#000000"
                android:fontFamily="@font/monda"
                android:textSize="18sp"/>
        </LinearLayout>
    </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:orientation="vertical"
                android:layout_column="1"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="#ffffff">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/smoke"
                    android:id="@+id/smokeBtn"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/smoke"
                    android:textColor="#000000"
                    android:fontFamily="@font/monda"
                    android:textSize="18sp"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>